    </definition>

    <definition name="index" extends="default">
        <put-attribute name="body" value="/WEB-INF/pages/index.jsp"/>
    </definition>


    <definition name="error" extends="default">
        <put-attribute name="body" value="/WEB-INF/pages/errorPage.jsp"/>
    </definition>

    <definition name="transfers" extends="default">
        <put-attribute name="body" value="/WEB-INF/pages/transfers.jsp"/>
    </definition>

    <definition name="fleet" extends="default">
        <put-attribute name="body" value="/WEB-INF/pages/fleet.jsp"/>
    </definition>

    <definition name="forAgencies" extends="default">
        <put-attribute name="body" value="/WEB-INF/pages/forAgencies.jsp"/>
    </definition>

    <definition name="contacts" extends="default">
        <put-attribute name="body" value="/WEB-INF/pages/contacts.jsp"/>
    </definition>



</tiles-definitions>